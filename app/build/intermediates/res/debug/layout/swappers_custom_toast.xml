<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/toast_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_web"
                android:id="@+id/user_photo_circle_image_view"
                app:border_width="1dp"
                app:border_color="@color/transparent"
                android:elevation="6dp" />

            <TextView
                android:id="@+id/swappers_toast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_photo_circle_image_view"
                android:layout_toEndOf="@+id/user_photo_circle_image_view"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/background_dark"
                android:elevation="6dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout><!-- From: file:/C:/Users/Bolsista/Desktop/Joamila/Git-Swappers/SWAPPERS-Atual/Swappers/app/src/main/res/layout/swappers_custom_toast.xml -->