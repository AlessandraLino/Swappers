<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/book_background">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SWToolbarTheme"
        app:popupTheme="@style/SWToolbarMenuTheme"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="1">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:src="@drawable/ic_person_giant"
                android:id="@+id/user_photo_circle_image_view"
                app:border_width="1dp"
                app:border_color="@color/transparent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User Photo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:elevation="50dp"
                android:id="@+id/card"
                android:layout_weight="0.61"
                android:padding="20dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Name"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/user_name_edit_text"
                        android:textColor="@color/color_accent_dark"
                        android:theme="@style/SWEditTextTheme"
                        android:hint="Greather than three letters" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="E-mail Address"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/user_email_edit_text"
                        android:textColor="@color/color_accent_dark"
                        android:theme="@style/SWEditTextTheme"
                        android:hint="A valid email address" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Password"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/user_password_edit_text"
                        android:textColor="@color/color_accent_dark"
                        android:theme="@style/SWEditTextTheme"
                        android:hint="Greather than 6 characters" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Password Confirmation"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/user_password_confirmation_edit_text"
                        android:textColor="@color/color_accent_dark"
                        android:theme="@style/SWEditTextTheme"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_accent_medium"
                android:textColor="@color/background_material_light"
                android:layout_margin="10dp"
                android:text="register now"
                android:id="@+id/registerButton"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
