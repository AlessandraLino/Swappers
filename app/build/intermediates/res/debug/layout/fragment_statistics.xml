<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifce.swappers.swappers.fragments.principal.StatisticsFragment">

    <android.support.v4.app.FragmentTabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/statistics_tabHost"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:rv_centered="false"
                app:rv_rippleDuration="400"
                app:rv_color="@color/color_ripple_register">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_accent_dark"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layoutMode="clipBounds"/>

            </com.andexert.library.RippleView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>

    </android.support.v4.app.FragmentTabHost>

</FrameLayout>
