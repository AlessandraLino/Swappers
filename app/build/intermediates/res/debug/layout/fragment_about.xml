<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifce.swappers.swappers.fragments.principal.AboutFragment"
    android:background="@drawable/book_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:src="@drawable/ic_launcher_web"
                    android:id="@+id/cover_near_book"
                    app:border_width="1dp"
                    app:border_color="@color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/swappers_about_name"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/about_swappers_slogan"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/about_version_title"
                    android:id="@+id/about_version_text"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/about_develpment_team_title"
                    android:id="@+id/title_development_team"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:src="@drawable/founder_alessandra"
                            android:id="@+id/alessandra_photo"
                            app:border_width="1dp"
                            app:border_color="@color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/about_alessandra_name"
                            android:id="@+id/alessandra_name"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:src="@drawable/founder_gracyane"
                            android:id="@+id/gracyane_photo"
                            app:border_width="1dp"
                            app:border_color="@color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/about_gracyane_name"
                            android:id="@+id/gracyane_name"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:src="@drawable/founder_francis"
                            android:id="@+id/francis_photo"
                            app:border_width="1dp"
                            app:border_color="@color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/about_francis_name"
                            android:id="@+id/francis_name"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:src="@drawable/founder_joamila"
                            android:id="@+id/joamila_photo"
                            app:border_width="1dp"
                            app:border_color="@color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/about_joamila_name"
                            android:id="@+id/joamila_name"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
