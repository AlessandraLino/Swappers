<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ToolbarTheme.Menu"
        />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.edu.ifce.swappers.swappers.activities.DetailBookActivity"
        android:id="@+id/detailBookRelativeLayout">

        <ImageView
            android:id="@+id/place_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:contentDescription="@string/profile_cover_photo_description"
            android:background="@color/accent_material_dark"
            android:src="@drawable/menu_back"
            android:scaleType="centerCrop"
            android:elevation="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/place_user_photo"
            android:src="@drawable/best_book"
            app:border_width="1dp"
            app:border_color="@color/transparent"
            android:elevation="4dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/place_cover_photo" />

    </RelativeLayout>
</LinearLayout>