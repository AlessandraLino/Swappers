<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifce.swappers.swappers.fragments.tabs.statistics.HotSpotsFragment">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_marginRight="32.5dp"
        android:layout_marginLeft="32.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_margin="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_location_city"
                android:id="@+id/cover_best_place"
                app:border_width="1dp"
                app:border_color="@color/transparent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/best_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/best_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_text"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/best_place_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_text"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_dark_material_light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:alpha="0.7" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/retrieved_hotspot_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black_text"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/received_hotspot_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginBottom="5dp"
                    android:password="false"
                    android:textColor="@color/black_text"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp" />
            </TableRow>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/best_places_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/best_places"
        android:textColor="@color/black_text"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:elevation="5dp"

        app:rv_rippleDuration="250"
        app:rv_centered="true"
        app:rv_color="@color/color_primary">


        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/next_place_image_button"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_navigate_next"
            android:background="@color/color_primary_dark"
            android:contentDescription="@string/next_month_donor_button"/>

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:elevation="5dp"

        app:rv_rippleDuration="250"
        app:rv_centered="true"
        app:rv_color="@color/color_primary">


        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/previous_place_image_button"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_navigate_before"
            android:background="@color/color_primary_dark"
            android:contentDescription="@string/previous_month_donor_button" />

    </com.andexert.library.RippleView>


</FrameLayout>
