<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    tools:context="br.edu.ifce.swappers.swappers.fragments.tabs.detail_book.SynopsisFragment"
    android:background="@color/background_material_light"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="8dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textAlignment="center"
                            android:text="@string/synopsis_card_view_title"
                            android:id="@+id/synopsis_book_label"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/synopsis_book"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_marginBottom="2dp"
                            android:gravity="fill|left|right" />




                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


        <!--</LinearLayout>-->

    </ScrollView>




</FrameLayout>
