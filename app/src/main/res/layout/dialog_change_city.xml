<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_current_city_edit_text"
        android:layout_weight="0.5"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="5dp"
        android:theme="@style/SWEditTextTheme"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/locate_me_image_button"
        android:src="@drawable/ic_location_history"
        android:layout_weight="0"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:contentDescription="locate me authomatically"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>